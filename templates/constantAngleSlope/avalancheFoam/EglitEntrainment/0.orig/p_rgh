FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
	leftInletWall
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

	rightWall
    {
        type            totalPressure;
        p0              uniform 0;
    }

	leftWall
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

	lowerWall
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }

	atmosphere
    {
        type            fixedFluxPressure;
        //type            totalPressure;
        p0              uniform 0;
    }

	sides
    {
        type            empty;
    }

    defaultFaces
    {
        type            empty;
    }
}


